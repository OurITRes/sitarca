# Backend/Server environment variables
# Copy this file to .env and fill in values for your environment

# Server configuration
PORT=3001
NODE_ENV=development

# Database or data store configuration (if applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=admin
# DB_PASSWORD=secure_password

# Authentication
# JWT_SECRET=your_jwt_secret_key
# AUTH_PROVIDER=local

# External integrations (Azure AD, Okta, Keycloak, etc.)
# SSO_CLIENT_ID=your_client_id
# SSO_CLIENT_SECRET=your_client_secret
# SSO_PROVIDER_URL=https://your-sso-provider.com

# Data import/export paths
# DATA_IMPORTS_DIR=./data_imports
# DATA_EXPORTS_DIR=./data_exports

# Feature flags
# ENABLE_SYNC_EXTERNAL_TOOLS=false
